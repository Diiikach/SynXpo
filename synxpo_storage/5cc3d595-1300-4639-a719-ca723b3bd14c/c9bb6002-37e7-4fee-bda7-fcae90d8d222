import os
import logging
from asyncio import sleep
from sqlalchemy.sql.dml import UpdateDMLState
from telegram import Update
from telegram.ext import Application, CommandHandler, MessageHandler, ContextTypes, filters
from dotenv import load_dotenv
from database import Database

load_dotenv()

# –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ª–æ–≥–∏—Ä–æ–≤–∞–Ω–∏—è
logging.basicConfig(
    format='%(asctime)s - %(name)s - %(levelname)s - %(message)s',
    level=logging.INFO,
    handlers=[
        logging.FileHandler('bot.log', encoding='utf-8'),  # –õ–æ–≥–∏ –≤ —Ñ–∞–π–ª
        logging.StreamHandler()  # –õ–æ–≥–∏ –≤ –∫–æ–Ω—Å–æ–ª—å
    ]
)
logger = logging.getLogger(__name__)
logger.info("=" * 50)
logger.info("–ë–æ—Ç –∑–∞–ø—É—Å–∫–∞–µ—Ç—Å—è...")
logger.info("=" * 50)

# –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö
db = Database()

# –°–æ—Å—Ç–æ—è–Ω–∏—è –¥–ª—è FSM
WAITING_FOR_PASSWORD = 1
WAITING_FOR_FIRST_NAME = 2
WAITING_FOR_WISHLIST = 3


async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–æ–º–∞–Ω–¥—ã /start"""
    user = update.effective_user
    telegram_id = user.id
    
    db_user = db.get_user(telegram_id)
    
    # –ï—Å–ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —É–∂–µ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω
    if db_user and db_user.is_registered:
        welcome_message = (
            f"–ü—Ä–∏–≤–µ—Ç, {user.first_name}! üëã\n\n"
            "–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –±–æ—Ç–∞ –¥–ª—è –¢–∞–π–Ω–æ–≥–æ –°–∞–Ω—Ç—ã! üéÖ\n\n"
            "–í—ã —É–∂–µ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω—ã!\n\n"
            "–î–æ—Å—Ç—É–ø–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã:\n"
            
            "/wish - –ó–∞–ø–æ–ª–Ω–∏—Ç—å —Å–≤–æ–π –≤–∏—à–ª–∏—Å—Ç\n"
            "/help - –ü–æ–∫–∞–∑–∞—Ç—å —Å–ø—Ä–∞–≤–∫—É"
        )
        await update.message.reply_text(welcome_message)
    else:
        # –ü—Ä–æ—Å–∏–º –≤–≤–µ—Å—Ç–∏ –ø–∞—Ä–æ–ª—å
        await update.message.reply_text(
            f"–ü—Ä–∏–≤–µ—Ç, {user.first_name}! üëã\n\n"
            "–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –±–æ—Ç–∞ –¥–ª—è –¢–∞–π–Ω–æ–≥–æ –°–∞–Ω—Ç—ã! üéÖ\n\n"
            "üîê –î–ª—è —É—á–∞—Å—Ç–∏—è –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –≤–≤–µ—Å—Ç–∏ –ø–∞—Ä–æ–ª—å.\n"
        )
        await sleep(2)
        await update.message.reply_text(
            f"ps –ø–∞—Ä–æ–ª—å –µ—Å—Ç—å –≤ –æ—Å–Ω–æ–≤–Ω–æ–º —á–∞—Ç–∏–∫–µ ü§´"
        )
        context.user_data['waiting_for_password'] = True


async def register(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –ø–æ –ø–∞—Ä–æ–ª—é"""
    user = update.effective_user
    telegram_id = user.id
    
    db_user = db.get_user(telegram_id)
    
    if db_user and db_user.is_registered:
        await update.message.reply_text(
            "–í—ã —É–∂–µ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω—ã!\n\n"
            "–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ /wish —á—Ç–æ–±—ã –∑–∞–ø–æ–ª–Ω–∏—Ç—å —Å–≤–æ–π –≤–∏—à–ª–∏—Å—Ç."
        )
    else:
        # –ü—Ä–æ—Å–∏–º –≤–≤–µ—Å—Ç–∏ –ø–∞—Ä–æ–ª—å
        await update.message.reply_text(
            "üîê –î–ª—è —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –≤–≤–µ—Å—Ç–∏ –ø–∞—Ä–æ–ª—å.\n"
            "–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –æ—Ç–ø—Ä–∞–≤—å—Ç–µ –ø–∞—Ä–æ–ª—å, –∫–æ—Ç–æ—Ä—ã–π –≤—ã –ø–æ–ª—É—á–∏–ª–∏ –≤ —á–∞—Ç–µ. üòâ"
        )
        await sleep(2)
        await update.message.reply_text(
            f"ps –ø–∞—Ä–æ–ª—å –µ—Å—Ç—å –≤ –æ—Å–Ω–æ–≤–Ω–æ–º —á–∞—Ç–∏–∫–µ ü§´"
        )
        context.user_data['waiting_for_password'] = True


async def wishlist(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–ù–∞—á–∞—Ç—å –∑–∞–ø–æ–ª–Ω–µ–Ω–∏–µ –≤–∏—à–ª–∏—Å—Ç–∞"""
    user = update.effective_user
    telegram_id = user.id
    
    db_user = db.get_user(telegram_id)
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—é
    if not db_user or not db_user.is_registered:
        await update.message.reply_text(
            "–í—ã –Ω–µ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω—ã üòî\n"
            "–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ /start –∏–ª–∏ /register –¥–ª—è —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏."
        )
        return
    
    if db_user.has_filled_wishlist:
        await update.message.reply_text(
            f"üìù –í–∞—à —Ç–µ–∫—É—â–∏–π –≤–∏—à–ª–∏—Å—Ç:\n\n{db_user.wishlist}\n\n"
            "–û—Ç–ø—Ä–∞–≤—å—Ç–µ –Ω–æ–≤—ã–π –≤–∏—à–ª–∏—Å—Ç, —á—Ç–æ–±—ã –æ–±–Ω–æ–≤–∏—Ç—å –µ–≥–æ."
        )
    
    await update.message.reply_text(
        "üìù –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –æ—Ç–ø—Ä–∞–≤—å—Ç–µ –≤–∞—à –≤–∏—à–ª–∏—Å—Ç (–∂–µ–ª–∞–µ–º—ã–µ –ø–æ–¥–∞—Ä–∫–∏).\n"
        "–í—ã –º–æ–∂–µ—Ç–µ –Ω–∞–ø–∏—Å–∞—Ç—å –≤—Å—ë —á—Ç–æ —É–≥–æ–¥–Ω–æ - —Å–ø–∏—Å–æ–∫ –∂–µ–ª–∞–Ω–∏–π, –ø—Ä–µ–¥–ø–æ—á—Ç–µ–Ω–∏—è –∏ —Ç.–¥."
    )
    
    context.user_data['waiting_for_wishlist'] = True


async def handle_password(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–≤–æ–¥–∞ –ø–∞—Ä–æ–ª—è"""
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ - –µ—Å–ª–∏ –Ω–µ –∂–¥—ë–º –ø–∞—Ä–æ–ª—å, —Å—Ä–∞–∑—É –≤—ã—Ö–æ–¥–∏–º
    if not context.user_data.get('waiting_for_password'):
        logger.debug(f"[handle_password] –ü—Ä–æ–ø—É—Å–∫: waiting_for_password = False –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {update.effective_user.id}")
        return
    
    logger.info(f"[handle_password] –û–±—Ä–∞–±–æ—Ç–∫–∞ –ø–∞—Ä–æ–ª—è –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {update.effective_user.id}")
    
    user = update.effective_user
    telegram_id = user.id
    entered_password = update.message.text.strip()
    
    # –ü–æ–ª—É—á–∞–µ–º –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –ø–∞—Ä–æ–ª—å –∏–∑ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö –æ–∫—Ä—É–∂–µ–Ω–∏—è
    correct_password = os.getenv('REGISTRATION_PASSWORD')
    
    if not correct_password:
        logger.error("REGISTRATION_PASSWORD –Ω–µ –Ω–∞–π–¥–µ–Ω –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö –æ–∫—Ä—É–∂–µ–Ω–∏—è!")
        await update.message.reply_text(
            "‚ùå –û—à–∏–±–∫–∞ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ –±–æ—Ç–∞. –û–±—Ä–∞—Ç–∏—Ç–µ—Å—å –∫ –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä—É."
        )
        context.user_data['waiting_for_password'] = False
        return
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º –ø–∞—Ä–æ–ª—å
    if entered_password == correct_password:
        logger.info(f"[handle_password] –ü–∞—Ä–æ–ª—å –≤–µ—Ä–Ω—ã–π –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {telegram_id}")
        context.user_data['waiting_for_password'] = False
        context.user_data['waiting_for_first_name'] = True
        logger.info(f"[handle_password] –°–æ—Å—Ç–æ—è–Ω–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω—ã: waiting_for_password=False, waiting_for_first_name=True")
        
        response = await update.message.reply_text(
            "–ü–∞—Ä–æ–ª—å –≤–µ—Ä–Ω—ã–π! üéÖüèª\n\n"
            "–¢–µ–ø–µ—Ä—å –≤–≤–µ–¥–∏—Ç–µ –≤–∞—à–µ –∏–º—è:"
        )
        logger.info(f"[handle_password] –°–æ–æ–±—â–µ–Ω–∏–µ –æ –≤–µ—Ä–Ω–æ–º –ø–∞—Ä–æ–ª–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ. Message ID: {response.message_id}")
    else:
        logger.info(f"[handle_password] –ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {telegram_id}")
        await update.message.reply_text(
            "–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â—ë —Ä–∞–∑. üòî\n"
            "–ò–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ /start –¥–ª—è –Ω–∞—á–∞–ª–∞ –∑–∞–Ω–æ–≤–æ."
        )


async def handle_first_name(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–≤–æ–¥–∞ –∏–º–µ–Ω–∏"""
    # –í–ê–ñ–ù–û: –õ–æ–≥–∏—Ä—É–µ–º –í–°–ï–ì–î–ê, –¥–∞–∂–µ –µ—Å–ª–∏ —Ñ—É–Ω–∫—Ü–∏—è –Ω–µ –¥–æ–ª–∂–Ω–∞ –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ
    user_id = update.effective_user.id
    logger.info(f"[handle_first_name] –§–£–ù–ö–¶–ò–Ø –í–´–ó–í–ê–ù–ê –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {user_id}")
    logger.info(f"[handle_first_name] –¢–µ–∫—Å—Ç —Å–æ–æ–±—â–µ–Ω–∏—è: '{update.message.text}'")
    logger.info(f"[handle_first_name] –ö–æ–Ω—Ç–µ–∫—Å—Ç: {context.user_data}")
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ - –µ—Å–ª–∏ –Ω–µ –∂–¥—ë–º –∏–º—è, —Å—Ä–∞–∑—É –≤—ã—Ö–æ–¥–∏–º
    waiting_for_first_name = context.user_data.get('waiting_for_first_name', False)
    logger.info(f"[handle_first_name] waiting_for_first_name = {waiting_for_first_name}")
    
    if not waiting_for_first_name:
        logger.info(f"[handle_first_name] –ü–†–û–ü–£–°–ö: waiting_for_first_name = False –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {user_id}")
        return
    
    logger.info(f"[handle_first_name] –ü–†–û–î–û–õ–ñ–ê–ï–ú: –°–æ—Å—Ç–æ—è–Ω–∏–µ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–æ, waiting_for_first_name = {waiting_for_first_name} –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {user_id}")
    
    try:
        user = update.effective_user
        telegram_id = user.id
        first_name = update.message.text.strip()
        
        logger.info(f"[handle_first_name] –û–±—Ä–∞–±–æ—Ç–∫–∞ –∏–º–µ–Ω–∏ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {telegram_id}: '{first_name}'")
        
        if not first_name or len(first_name) < 2:
            logger.info(f"[handle_first_name] –ò–º—è —Å–ª–∏—à–∫–æ–º –∫–æ—Ä–æ—Ç–∫–æ–µ: '{first_name}'")
            await update.message.reply_text(
                "–ö–∞–∫-—Ç–æ –∫–æ—Ä–æ—Ç–∫–æ...üßê:"
            )
            return
        
        logger.info(f"[handle_first_name] –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {telegram_id}...")
        # –†–µ–≥–∏—Å—Ç—Ä–∏—Ä—É–µ–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è —Å –≤–≤–µ–¥—ë–Ω–Ω—ã–º –∏–º–µ–Ω–µ–º
        db_user = db.add_user(
            telegram_id=telegram_id,
            username=user.username,
            first_name=first_name,
            last_name=user.last_name  # –ò—Å–ø–æ–ª—å–∑—É–µ–º —Ñ–∞–º–∏–ª–∏—é –∏–∑ Telegram, –µ—Å–ª–∏ –µ—Å—Ç—å
        )

        logger.info(f"[handle_first_name] –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å {telegram_id} –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω –∫–∞–∫ {first_name} (ID –≤ –ë–î: {db_user.id})")
        
        context.user_data['waiting_for_first_name'] = False
        context.user_data['waiting_for_wishlist'] = True
        logger.info(f"[handle_first_name] –°–æ—Å—Ç–æ—è–Ω–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω—ã: waiting_for_first_name=False, waiting_for_wishlist=True")
        
        logger.info(f"[handle_first_name] –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—é {telegram_id}...")
        response = await update.message.reply_text(
            f"–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è —É—Å–ø–µ—à–Ω–∞, {first_name}! üéÖüèª\n\n"
        )
        await sleep(3)
        await update.message.reply_text("""
–¢–µ–ø–µ—Ä—å –ø–æ–¥—É–º–∞–π –Ω–∞–¥ –≤–∏—à–ª–∏—Å—Ç–æ–º. –ß—Ç–æ —Ö–æ—Ç–µ–ª–æ—Å—å –±—ã –ø–æ–ª—É—á–∏—Ç—å –≤ –ø–æ–¥–∞—Ä–æ–∫?\n
–ü–æ—Å—Ç–∞—Ä–∞–π—Å—è —É–ª–æ–∂–∏—Ç—å—Å—è –≤ –ø—Ä–∏–º–µ—Ä–Ω—ã–π –±—é–¥–∂–µ—Ç –≤ 700-1500 —Ä—É–±–ª–µ–π.\n
–î–æ –∂–µ—Ä–µ–±—å—ë–≤–∫–∏ –≤–∏—à–ª–∏—Å—Ç –º–æ–∂–Ω–æ –±—É–¥–µ—Ç –∏–∑–º–µ–Ω–∏—Ç—å.\n –û–Ω–∞ –ø—Ä–æ–π–¥—ë—Ç —É—Ç—Ä–æ–º 6 –¥–µ–∫–∞–±—Ä—è.\n
–ï—Å–ª–∏ —Ç—ã –Ω–µ –∑–∞–ø–æ–ª–Ω–∏—à—å –µ–≥–æ –¥–æ —É–∫–∞–∑–∞–Ω–Ω–æ–π –¥–∞—Ç—ã, —Ç–æ —É—á–∞—Å—Ç–≤–æ–≤–∞—Ç—å –≤ –∫–æ–Ω–∫—É—Ä—Å–µ –Ω–µ –ø–æ–ª—É—á–∏—Ç—Å—è, –ø–æ—ç—Ç–æ–º—É —Å–¥–µ–ª–∞–π —ç—Ç–æ –∫–∞–∫ –º–æ–∂–Ω–æ –±—ã—Å—Ç—Ä–µ–µ üéÖüèª \n
–î–æ —ç—Ç–∞–ø–∞ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –ø–æ–¥–≥–æ—Ç–æ–≤–∏—Ç—å –ø–æ–¥–∞—Ä–æ–∫ –∏ –ø–æ—Å–ª–µ —Å–æ—Ä–µ–≤–Ω–æ–≤–∞–Ω–∏—è –≤—Ä—É—á–∏—Ç—å –µ–≥–æ –ø–æ–ª—É—á–∞—Ç–µ–ª—é. –ù–µ –∑–∞—Ç—è–≥–∏–≤–∞–π —Å –ø–æ–¥–≥–æ—Ç–æ–≤–∫–æ–π –∏ –Ω–µ –æ—Å—Ç–∞–≤—å –Ω–∏–∫–æ–≥–æ –±–µ–∑ –ø–æ–¥–∞—Ä–∫–∞. üéÖüèª
""")
        await sleep(3)
        await update.message.reply_text(f"""–î–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –∏–ª–∏ –∏–∑–º–µ–Ω–µ–Ω–∏—è –≤–∏—à–ª–∏—Å—Ç–∞ –≤–æ—Å–ø–æ–ª—å–∑—É–π—Å—è –∫–æ–º–∞–Ω–¥–æ–π /wish""")
        logger.info(f"[handle_first_name] –°–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ —É—Å–ø–µ—à–Ω–æ! Message ID: {response.message_id}")
    except Exception as e:
        logger.error(f"[handle_first_name] –û–®–ò–ë–ö–ê –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ –∏–º–µ–Ω–∏: {e}", exc_info=True)
        try:
            await update.message.reply_text(
                "–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏.üòî –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â—ë —Ä–∞–∑ –∏–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ /start"
            )
        except Exception as e2:
            logger.error(f"[handle_first_name] –û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ —Å–æ–æ–±—â–µ–Ω–∏—è –æ–± –æ—à–∏–±–∫–µ: {e2}")


async def handle_wishlist(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–∏—à–ª–∏—Å—Ç–∞ –æ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è"""
    if not context.user_data.get('waiting_for_wishlist'):
        logger.debug(f"handle_wishlist: waiting_for_wishlist = False –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {update.effective_user.id}")
        return
    logger.info(f"[handle_wishlist] –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–∏—à–ª–∏—Å—Ç–∞ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {update.effective_user.id}")
    
    try:
        user = update.effective_user
        telegram_id = user.id
        wishlist_text = update.message.text
        
        logger.info(f"–û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–∏—à–ª–∏—Å—Ç–∞ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {telegram_id}")
        
        success = db.update_wishlist(telegram_id, wishlist_text)
        
        if success:
            context.user_data['waiting_for_wishlist'] = False
            await update.message.reply_text(
                "–í–∞—à –≤–∏—à–ª–∏—Å—Ç —É—Å–ø–µ—à–Ω–æ —Å–æ—Ö—Ä–∞–Ω—ë–Ω! üéÖüèª\n\n"
                "–¢–µ–ø–µ—Ä—å –∂–¥–∏—Ç–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤ –∂–µ—Ä–µ–±—å—ë–≤–∫–∏! üéÑ"
            )
            logger.info(f"–í–∏—à–ª–∏—Å—Ç —Å–æ—Ö—Ä–∞–Ω—ë–Ω –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {telegram_id}")
        else:
            logger.error(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏ –≤–∏—à–ª–∏—Å—Ç–∞ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {telegram_id}")
            await update.message.reply_text(
                "–û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏ –≤–∏—à–ª–∏—Å—Ç–∞. üòî –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â—ë —Ä–∞–∑."
            )
    except Exception as e:
        logger.error(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ –≤–∏—à–ª–∏—Å—Ç–∞: {e}", exc_info=True)
        await update.message.reply_text(
            "‚ùå –ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏ –≤–∏—à–ª–∏—Å—Ç–∞. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â—ë —Ä–∞–∑."
        )


async def myinfo(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–ü–æ–∫–∞–∑–∞—Ç—å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ"""
    user = update.effective_user
    telegram_id = user.id
    
    db_user = db.get_user(telegram_id)
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—é
    if not db_user or not db_user.is_registered:
        await update.message.reply_text(
            "–í—ã –Ω–µ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω—ã.\n"
            "–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ /start –∏–ª–∏ /register –¥–ª—è —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏."
        )
        return
    
    info = f"üë§ –í–∞—à–∞ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è:\n\n"
    info += f"–ò–º—è: {db_user.first_name or '–ù–µ —É–∫–∞–∑–∞–Ω–æ'}\n"
    info += f"Username: @{db_user.username or '–ù–µ —É–∫–∞–∑–∞–Ω–æ'}\n"
    info += f"–ó–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω: {'‚úÖ –î–∞' if db_user.is_registered else '‚ùå –ù–µ—Ç'}\n"
    info += f"–í–∏—à–ª–∏—Å—Ç –∑–∞–ø–æ–ª–Ω–µ–Ω: {'‚úÖ –î–∞' if db_user.has_filled_wishlist else '‚ùå –ù–µ—Ç'}\n"
    
    if db_user.has_filled_wishlist:
        info += f"\nüìù –í–∞—à –≤–∏—à–ª–∏—Å—Ç:\n{db_user.wishlist}"
    
    await update.message.reply_text(info)


async def help_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–°–ø—Ä–∞–≤–∫–∞ –ø–æ –∫–æ–º–∞–Ω–¥–∞–º"""
    help_text = (
        "üìö –î–æ—Å—Ç—É–ø–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã:\n\n"
        "/start - –ù–∞—á–∞—Ç—å —Ä–∞–±–æ—Ç—É —Å –±–æ—Ç–æ–º\n"
        "/register - –ó–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞—Ç—å—Å—è (—Ç—Ä–µ–±—É–µ—Ç—Å—è –ø–∞—Ä–æ–ª—å)\n"
        "/wish - –ó–∞–ø–æ–ª–Ω–∏—Ç—å/–æ—Ç—Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –≤–∏—à–ª–∏—Å—Ç\n"
        "/myinfo - –ü–æ—Å–º–æ—Ç—Ä–µ—Ç—å —Å–≤–æ—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é\n"
        "/help - –ü–æ–∫–∞–∑–∞—Ç—å —ç—Ç—É —Å–ø—Ä–∞–≤–∫—É\n\n"
        "üí° –î–ª—è —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏ –Ω—É–∂–µ–Ω –ø–∞—Ä–æ–ª—å, –∫–æ—Ç–æ—Ä—ã–π –≤—ã –ø–æ–ª—É—á–∏–ª–∏ –≤ —á–∞—Ç–µ.\n"
        "–ü–æ—Å–ª–µ –∑–∞–ø–æ–ª–Ω–µ–Ω–∏—è –≤–∏—à–ª–∏—Å—Ç–∞ –∂–¥–∏—Ç–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤ –∂–µ—Ä–µ–±—å—ë–≤–∫–∏!"
    )
    await update.message.reply_text(help_text)


def main():
    """–ó–∞–ø—É—Å–∫ –±–æ—Ç–∞"""
    token = os.getenv('BOT_TOKEN')
    
    if not token:
        logger.error("BOT_TOKEN –Ω–µ –Ω–∞–π–¥–µ–Ω –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö –æ–∫—Ä—É–∂–µ–Ω–∏—è!")
        return
    
    application = Application.builder().token(token).build()
    
    # –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–æ–≤
    application.add_handler(CommandHandler("start", start))
    application.add_handler(CommandHandler("register", register))
    application.add_handler(CommandHandler("wishlist", wishlist))
    application.add_handler(CommandHandler("wish", wishlist))  # –ê–ª–∏–∞—Å –¥–ª—è wishlist
    application.add_handler(CommandHandler("myinfo", myinfo))
    application.add_handler(CommandHandler("help", help_command))
    
    # –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π (–¥–ª—è –ø–∞—Ä–æ–ª—è, –∏–º–µ–Ω–∏ –∏ –≤–∏—à–ª–∏—Å—Ç–∞)
    # –ò—Å–ø–æ–ª—å–∑—É–µ–º –æ–¥–∏–Ω –æ–±—Ä–∞–±–æ—Ç—á–∏–∫, –∫–æ—Ç–æ—Ä—ã–π –ø—Ä–æ–≤–µ—Ä—è–µ—Ç —Å–æ—Å—Ç–æ—è–Ω–∏—è –ø–æ –ø–æ—Ä—è–¥–∫—É
    logger.info("–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∞ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π...")
    
    async def handle_text_message(update: Update, context: ContextTypes.DEFAULT_TYPE):
        """–£–Ω–∏–≤–µ—Ä—Å–∞–ª—å–Ω—ã–π –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π"""
        user_id = update.effective_user.id
        logger.info(f"[handle_text_message] –ü–æ–ª—É—á–µ–Ω–æ —Ç–µ–∫—Å—Ç–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {user_id}: '{update.message.text}'")
        logger.info(f"[handle_text_message] –ö–æ–Ω—Ç–µ–∫—Å—Ç: {context.user_data}")
        
        # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏—è –ø–æ –ø–æ—Ä—è–¥–∫—É –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç–∞
        if context.user_data.get('waiting_for_password'):
            logger.info(f"[handle_text_message] –í—ã–∑–æ–≤ handle_password")
            await handle_password(update, context)
            return
        
        if context.user_data.get('waiting_for_first_name'):
            logger.info(f"[handle_text_message] –í—ã–∑–æ–≤ handle_first_name")
            await handle_first_name(update, context)
            return
        
        if context.user_data.get('waiting_for_wishlist'):
            logger.info(f"[handle_text_message] –í—ã–∑–æ–≤ handle_wishlist")
            await handle_wishlist(update, context)
            return
        
        logger.debug(f"[handle_text_message] –ù–∏ –æ–¥–Ω–æ —Å–æ—Å—Ç–æ—è–Ω–∏–µ –Ω–µ –∞–∫—Ç–∏–≤–Ω–æ, —Å–æ–æ–±—â–µ–Ω–∏–µ –∏–≥–Ω–æ—Ä–∏—Ä—É–µ—Ç—Å—è")
    
    application.add_handler(
        MessageHandler(filters.TEXT & ~filters.COMMAND, handle_text_message)
    )
    logger.info("‚úì –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω")
    
    logger.info("–í—Å–µ –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω—ã. –ë–æ—Ç –∑–∞–ø—É—Å–∫–∞–µ—Ç—Å—è...")
    application.run_polling(allowed_updates=Update.ALL_TYPES)


if __name__ == '__main__':
    main()

