"""
–°–∫—Ä–∏–ø—Ç –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å–æ–æ–±—â–µ–Ω–∏–π
"""
import os
import asyncio
from telegram import Bot
from dotenv import load_dotenv
from database import Database

load_dotenv()


async def send_results():
    """–û—Ç–ø—Ä–∞–≤–ª—è–µ—Ç —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã –∂–µ—Ä–µ–±—å—ë–≤–∫–∏ –≤—Å–µ–º —É—á–∞—Å—Ç–Ω–∏–∫–∞–º"""
    token = os.getenv('BOT_TOKEN')
    
    if not token:
        print("‚ùå BOT_TOKEN –Ω–µ –Ω–∞–π–¥–µ–Ω –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö –æ–∫—Ä—É–∂–µ–Ω–∏—è!")
        return
    
    bot = Bot(token=token)
    db = Database()
    session = db.get_session()
    
    try:
        from database import Match, User
        
        # –ü–æ–ª—É—á–∞–µ–º –≤—Å–µ –≤–µ—Ä–∏—Ñ–∏—Ü–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ –º–∞—Ç—á–∏
        users = session.query(Match).filter_by(has_filled_wishlist=True).all()
        
        success_count = 0
        error_count = 0
        
        for user in users:
            giver = session.query(User).filter_by(id=user.giver_id).first()
            receiver = session.query(User).filter_by(id=user.receiver_id).first()

            message = (
                "üéÖ –ê —Ç—ã —É–∂–µ –≥–æ—Ç–æ–≤–∏—à—å –ø–æ–¥–∞—Ä–æ–∫?\n\n –î–æ —ç—Ç–∞–ø–∞ –º–µ–Ω—å—à–µ –Ω–µ–¥–µ–ª–∏, –ø–æ–º–∏–º–æ –ø–æ–¥–∞—Ä–∫–∞ –Ω–µ –∑–∞–±—É–¥—å –ø–æ–¥–≥–æ—Ç–æ–≤–∏—Ç—å —Å–µ–±—è, —á—Ç–æ–±—ã –ø–æ—Ä–∞–¥–æ–≤–∞—Ç—å—Å—è —Ö–æ—Ä–æ—à–∏–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞–º!"
            )

            try:
                await bot.send_animation(chat_id=user.telegram_id, "/root/secret-santa/gri.gif")
                await bot.send_message(
                    chat_id=user.telegram_id,
                    text=message
                )
                db.mark_match_sent(giver.telegram_id)
                print(f"‚úÖ –û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ {giver.first_name} ‚Üí {receiver.first_name}")
                success_count += 1
                
                # –ù–µ–±–æ–ª—å—à–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞ —á—Ç–æ–±—ã –Ω–µ –ø—Ä–µ–≤—ã—Å–∏—Ç—å –ª–∏–º–∏—Ç—ã API
                await asyncio.sleep(0.5)
                
            except Exception as e:
                print(f"‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ {giver.first_name}: {e}")
                error_count += 1
        
        print(f"\n‚úÖ –£—Å–ø–µ—à–Ω–æ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ: {success_count}")
        if error_count > 0:
            print(f"‚ùå –û—à–∏–±–æ–∫: {error_count}")
        
    finally:
        session.close()


def main():
    asyncio.run(send_results())


if __name__ == '__main__':
    main()

